<%- include ./../partials/main_nav.ejs %>

<div class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="post">
            <div class="form-field">
                <label for="nameField">Asset Name</label>
                <input type="text" class="form-control"
                    id = "nameField"
                    placeholder = "Enter the asset name"
                    value = "<%= asset.name%>"
                    name = "name" required>
            </div>
            <br>
            <div class="form-field">
                <label for="descField">Asset Description</label>
                <input type="text" class="form-control"
                    id = "descField"
                    placeholder = "Enter a description for the asset"
                    value = "<%= asset.description%>"
                    name = "description" required>
            </div>
            <br>
            <div class="form-field">
                <label for="classField">Choose an Asset Class:</label>
                <select type="text" class="form-control"
                    id = "classField"
                    value = "<%= asset.class%>"
                    name = "class" required>
                    <option value="Machinery">Machinery</option>
                    <option value="Equipment">Equipment</option>
                    <option value="Building">Building</option>
                    <option value="IT Equipment">IT Equipment</option>
                    <option value="Software">Software</option>
                    <option value="Intangible">Intangible</option>
                    <option value="Land">Land/Property</option>
                    <option value="Vehicle">Vehicle</option>
                </select>
            </div>
            <br>

            <div class="form-field">
                <label for="tagField">Asset Tag</label>
                <input type="text" class="form-control"
                    value = "<%= asset.tag%>"
                    id = "descField"
                    placeholder = "Enter an asset tag (8 char or less)"
                    max = "8"
                    name = "tag" required>
            </div>
            <br>
            <div class="form-field">
                <label for="dateField">Select the Aquisition Date:</label>
                <input type="date" class="form-control"
                    id = "dateField"
                    name = "aquisitionDate" required>
                    
            </div>
            <br>
            <div class="form-field">
                <label for="lifeField">Useful Life:</label>
                <input type="number" class="form-control"
                    value = "<%= asset.usefulLife%>"
                    min = "12"
                    max = "360"
                    placeholder = "Enter asset useful life in months"
                    id = "lifeField"
                    name = "usefulLife" required>
            </div>
            <br>
            <div class="form-field">
                <label for="costField">Asset Cost:</label>
                <input type="number" class="form-control"
                    value = "<%= asset.cost%>"
                    min = "100"
                    step="0.01"
                    placeholder = "Enter asset cost in dollars"
                    id = "costField"
                    name = "cost" required>
            </div>
            <br>
            <button class="btn btn-success" type="submit">
                <i class="fa-regular fa-check-to-slot"></i> Update Asset
            </button>

            <a href="/asset-list" class="btn btn-warning">
            <i class="fa-regular fa-xmark"></i> Cancel</a>
            
        </div>
    </div>
</div>

<%- include ./../partials/footer.ejs %>