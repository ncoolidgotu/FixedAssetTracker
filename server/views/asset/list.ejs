<%- include ./../partials/main_nav.ejs %>
<!--Nate Coolidge - 100749708-->
<main class="container">
        <div class="row">
            <div class="col-md-offset-3 col-md-15 text-center">
                <h1><%= title %></h1>
                <br>
                <br>
                <table class = "table table-bordered table-striped table-hover"> <!--Use Bootstrap table-->
                <thead class="table-dark"> <!--Make table header dark-->
                    <tr>
                        <th class="col-2">Asset Name</th> <!--Table columns-->
                        <th class="col-2">Asset Class</th>
                        <th class="col-1">Asset Tag</th>
                        <th class="col-4">Asset Description</th>
                        <th class="col-2">Acquisition Date</th>
                        <th class="col-1">Useful Life (Months)</th>
                        <th class="col-1">Asset Cost</th>
                        <th class="col-1"></th>
                        <th class="col-1"></th>
                    </tr>
                    </thead>
                    <tbody> <!--Count items in database and create a row for each. For every row, display data at the count index in the database-->
                    <% for(let count=0; count < Assetlist.length; count++) { %>
                    <tr>
                        <td><%= Assetlist[count].name %></td>
                        <td><%= Assetlist[count].class %></td>
                        <td><%= Assetlist[count].tag %></td>
                        <td><%= Assetlist[count].description %></td>
                        <td><%= Assetlist[count].aquisitionDate.toDateString() //extract date string%></td>
                        <td><%= Assetlist[count].usefulLife %></td>
                        <td>$<%= Assetlist[count].cost %></td>
                        <td class="col-1">
                            <a href='/asset-list/update/<%= Assetlist[count]._id %>'
                            class="btn btn-info"
                            <i class="fas fas-pencil-alt">Update</i>
                        </td>
                        <td class="col-1">
                            <a href='/asset-list/retire/<%= Assetlist[count]._id %>'
                            class="btn btn-danger retireConfirm"
                            <i class="fas fas-pencil-alt">Retire</i>
                        </td>
                    </tr>
                    <% } %>
                    </tbody>
                </table>
        </div>
        </div>
</main>
